<config>
    <modules>
        <Dhl_LocationFinder>
            <version>1.0.1</version>
        </Dhl_LocationFinder>
    </modules>
    <global>
        <blocks>
            <dhl_locationfinder>
                <class>Dhl_LocationFinder_Block</class>
            </dhl_locationfinder>
        </blocks>
        <helpers>
            <dhl_locationfinder>
                <class>Dhl_LocationFinder_Helper</class>
            </dhl_locationfinder>
        </helpers>
        <models>
            <dhl_locationfinder>
                <class>Dhl_LocationFinder_Model</class>
            </dhl_locationfinder>
        </models>
        <resources>
            <dhl_locationfinder_setup>
                <setup>
                    <module>Dhl_LocationFinder</module>
                    <class>Mage_Customer_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </dhl_locationfinder_setup>
        </resources>
        <events>
            <controller_front_init_before>
                <observers>
                    <register_autoload>
                        <class>dhl_locationfinder/observer</class>
                        <method>registerAutoload</method>
                        <type>singleton</type>
                    </register_autoload>
                </observers>
            </controller_front_init_before>
        </events>
        <fieldsets>
            <sales_convert_quote_address>
                <dhl_post_number>
                    <to_order_address>*</to_order_address>
                </dhl_post_number>
                <dhl_station_type>
                    <to_order_address>*</to_order_address>
                </dhl_station_type>
                <dhl_station>
                    <to_order_address>*</to_order_address>
                </dhl_station>
            </sales_convert_quote_address>
            <sales_convert_order_address>
                <dhl_post_number>
                    <to_quote_address>*</to_quote_address>
                </dhl_post_number>
                <dhl_station_type>
                    <to_quote_address>*</to_quote_address>
                </dhl_station_type>
                <dhl_station>
                    <to_quote_address>*</to_quote_address>
                </dhl_station>
            </sales_convert_order_address>
        </fieldsets>
    </global>
    <frontend>
        <routers>
            <dhl_locationfinder>
                <use>standard</use>
                <args>
                    <module>Dhl_LocationFinder</module>
                    <frontName>dhlpsf</frontName>
                </args>
            </dhl_locationfinder>
        </routers>
        <secure_url>
            <dhl_locationfinder>/dhlpsf/</dhl_locationfinder>
        </secure_url>
        <layout>
            <updates>
                <dhl_locationfinder>
                    <file>dhl_locationfinder.xml</file>
                    <module>Dhl_LocationFinder</module>
                </dhl_locationfinder>
            </updates>
        </layout>
        <translate>
            <modules>
                <dhl_locationfinder>
                    <files>
                        <default>Dhl_LocationFinder.csv</default>
                    </files>
                </dhl_locationfinder>
            </modules>
        </translate>
        <events>
            <core_block_abstract_to_html_after>
                <observers>
                    <append_location_finder_to_shipping>
                        <class>dhl_locationfinder/observer</class>
                        <method>appendLocationFinderToShipping</method>
                    </append_location_finder_to_shipping>
                </observers>
            </core_block_abstract_to_html_after>
            <sales_quote_save_before>
                <observers>
                    <save_dhl_fields>
                        <type>singleton</type>
                        <class>Dhl_LocationFinder_Model_Observer</class>
                        <method>saveDHLFieldsInQuote</method>
                    </save_dhl_fields>
                </observers>
            </sales_quote_save_before>
        </events>
    </frontend>
    <adminhtml>
