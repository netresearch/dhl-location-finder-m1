<config>
    <modules>
        <Dhl_LocationFinder>
            <version>0.1.0</version>
        </Dhl_LocationFinder>
    </modules>
    <global>
        <blocks>
            <dhl_locationfinder>
                <class>Dhl_LocationFinder_Block</class>
            </dhl_locationfinder>
        </blocks>
        <helpers>
            <dhl_locationfinder>
                <class>Dhl_LocationFinder_Helper</class>
            </dhl_locationfinder>
        </helpers>
        <models>
            <dhl_locationfinder>
                <class>Dhl_LocationFinder_Model</class>
            </dhl_locationfinder>
        </models>
        <resources>
            <dhl_locationfinder_setup>
                <setup>
                    <module>Dhl_LocationFinder</module>
                </setup>
            </dhl_locationfinder_setup>
        </resources>
        <events>
            <controller_front_init_before>
                <observers>
                    <register_autoload>
                        <class>dhl_locationfinder/observer</class>
                        <method>registerAutoload</method>
                        <type>singleton</type>
                    </register_autoload>
                </observers>
            </controller_front_init_before>
        </events>
    </global>
    <frontend>
        <routers>
            <dhl_locationfinder>
                <use>standard</use>
                <args>
                    <module>Dhl_LocationFinder</module>
                    <frontName>dhlpsf</frontName>
                </args>
            </dhl_locationfinder>
        </routers>
        <secure_url>
            <dhl_locationfinder>/dhlpsf/</dhl_locationfinder>
        </secure_url>
        <layout>
            <updates>
                <dhl_locationfinder>
                    <file>dhl_locationfinder.xml</file>
                </dhl_locationfinder>
            </updates>
        </layout>
        <translate>
            <modules>
                <dhl_locationfinder>
                    <files>
                        <default>Dhl_LocationFinder.csv</default>
                    </files>
                </dhl_locationfinder>
            </modules>
        </translate>
        <events>
            <core_block_abstract_to_html_after>
                <observers>
                    <append_location_finder_to_shipping>
                        <class>dhl_locationfinder/observer</class>
                        <method>appendLocationFinderToShipping</method>
                    </append_location_finder_to_shipping>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <dhl_locationfinder>
                    <files>
                        <default>Dhl_LocationFinder.csv</default>
                    </files>
                </dhl_locationfinder>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <dhl_locationfinder>
            <dev>
                <autoload_enabled>1</autoload_enabled>
            </dev>
            <webservice>
                <auth_username>magento_1</auth_username>
                <auth_password>2de26b775e59279464d1c2f8546432e62413372421c672db36eaacfc2f</auth_password>
                <valid_countries>
                    <AT>Austria</AT>
                    <BE>Belgium</BE>
                    <CZ>Czech Republic</CZ>
                    <DE>Germany</DE>
                    <NL>Netherlands</NL>
                    <PL>Poland</PL>
                    <SK>Slovakia</SK>
                </valid_countries>
            </webservice>
        </dhl_locationfinder>
        <dhl>
            <dhl_locationfinder>
                <enable_location_finder>1</enable_location_finder>
                <map_type>googlemaps</map_type>
                <include_jquery>0</include_jquery>
            </dhl_locationfinder>
        </dhl>
    </default>
    <phpunit>
        <suite>
            <modules>
                <Dhl_LocationFinder/>
            </modules>
        </suite>
    </phpunit>
</config>
