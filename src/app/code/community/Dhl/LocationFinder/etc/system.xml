<config>
    <sections>
        <checkout>
            <groups>
                <dhl_locationfinder translate="label" module="dhl_locationfinder">
                    <label>DHL Parcel Shop Finder</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <map_api_key translate="label" module="dhl_locationfinder">
                            <label>Google Maps API Key</label>
                            <comment><![CDATA[<a href="https://developers.google.com/maps/documentation/javascript/get-api-key" target="_blank">Get a Key</a>]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </map_api_key>
                        <limit_results translate="label" module="dhl_locationfinder">
                            <label>Limit Results</label>
                            <frontend_type>select</frontend_type>
                            <source_model>dhl_locationfinder/adminhtml_system_config_source_limit</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </limit_results>
                        <fix_or_boundaries translate="label comment" module="dhl_locationfinder">
                            <label>Fix Zoom or Boundaries</label>
                            <comment>After searching for DHL stations, should the map scale so all shops are visible in one sight or should it zoom to a specific factor.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>dhl_locationfinder/adminhtml_system_config_source_center</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </fix_or_boundaries>
                        <zoom_factor translate="label comment" module="dhl_locationfinder">
                            <label>Zoom factor after search</label>
                            <comment>Set a zoom factor between 9 and 15</comment>
                            <frontend_type>text</frontend_type>
                            <validate>required-entry validate-number-range number-range-9-15</validate>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><fix_or_boundaries>fix</fix_or_boundaries></depends>
                        </zoom_factor>
                    </fields>
                </dhl_locationfinder>
            </groups>
        </checkout>
    </sections>
</config>
