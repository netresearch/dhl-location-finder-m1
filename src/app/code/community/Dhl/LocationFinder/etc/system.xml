<config>
    <sections>
        <dhl translate="label" module="dhl_locationfinder">
            <label>DHL</label>
            <tab>sales</tab>
            <sort_order>325</sort_order>
            <frontend_type>text</frontend_type>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <dhl_locationfinder translate="label" module="dhl_locationfinder">
                    <label>DHL Parcel Shop Finder</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable_location_finder translate="label" module="dhl_locationfinder">
                            <label>Enable Parcel Shop Finder</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_location_finder>
                        <map_api_key translate="label" module="dhl_locationfinder">
                            <label>Google Maps API Key</label>
                            <comment><![CDATA[<a href="https://developers.google.com/maps/documentation/javascript/get-api-key" target="_blank">Get a Key</a>]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </map_api_key>
                        <map_type translate="label" module="dhl_locationfinder">
                            <label>Select Map Provider</label>
                            <frontend_type>select</frontend_type>
                            <source_model>dhl_locationfinder/adminhtml_system_config_source_maptype</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </map_type>
                        <include_jquery translate="label comment tooltip" module="dhl_locationfinder">
                            <label>Include jQuery</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Only include jQuery if you do not already have</comment>
                            <tooltip>Will include jQuery in v1.12.4</tooltip>
                        </include_jquery>
                    </fields>
                </dhl_locationfinder>
            </groups>
        </dhl>
    </sections>
</config>
